extends layout

block append vars
  - var bodyclass = 'article'
  - var fullUrl = locals.url + page.url

block prepend title
  | #{ page.title + " â€¢ "}

block prepend header
  h1.brand Eric Weise
  a.home.icon-home.back-to-home(href='/', title=locals.name)

block header
  header.header.container
    small.header-metadata
      span.timestamp= moment(page.date).format('MMMM D, YYYY')
    h1.header-title= page.title

block content
  article.content-article!= page.html
  div.content-share
    a.twitter-follow-button(href="https://twitter.com/" + locals.twitter, data-show-count="false")
      | Follow @#{ locals.twitter }
    a.twitter-share-button(href="https://twitter.com/share", data-url=fullUrl, data-text=page.title, data-via=locals.twitter)
      | Tweet

